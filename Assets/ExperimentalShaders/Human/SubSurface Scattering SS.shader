                float3 finalColor = ((node_7419.rgb*_LightColor0.rgb*attenuation)*i.vertexColor.r);
                fixed4 finalRGBA = fixed4(finalColor,1);
                UNITY_APPLY_FOG(i.fogCoord, finalRGBA);
                return finalRGBA;
            }
            ENDCG
